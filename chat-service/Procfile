web: java -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:InitialRAMPercentage=30.0 -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication -XX:+ParallelRefProcEnabled -XX:MaxDirectMemorySize=32m -Xss228k -XX:MaxMetaspaceSize=120m -XX:+ExitOnOutOfMemoryError -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/tmp/heapdump.hprof -XX:G1PeriodicGCInterval=120000 -XX:G1PeriodicGCSystemLoadThreshold=0.0 -XX:NativeMemoryTracking=summary -Xlog:gc*:file=/tmp/gc.log:time,level,tags:filecount=3,filesize=5m -Djava.security.egd=file:/dev/./urandom -Dspring.profiles.active=prod -jar target/chat-service-0.0.1-SNAPSHOT.jar --server.port=$PORT